<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoppinghelper">

    <application
        android:allowBackup="true"
        android:icon="@drawable/shop"
        android:label="@string/app_name"
        android:roundIcon="@drawable/shop"
        android:supportsRtl="true"
        android:theme="@style/AppRafalTheme">
        <activity android:name=".OtherActivity"></activity>
        <activity android:name=".BakeryActivity" />
        <activity android:name=".FruitsActivity" />
        <activity android:name=".DrinksActivity" />
        <activity android:name=".Summary" />
        <activity android:name=".VegetablesActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>